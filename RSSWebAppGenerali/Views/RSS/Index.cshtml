@model IEnumerable<RSSWebAppGenerali.DTOs.RSSItemDTO>
@{
    ViewBag.Title = "Index";
}

<h1>Home</h1>
<div>
    <p>
        @Html.ActionLink("Add a new RSS Html Link", "Index", "FeedLink")
    </p>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Recent News</h2>
        @foreach (var dto in Model)
        {
            <h4 style="text-align:center" >@dto.Category</h4>
            foreach (var item in dto.RssList)
            {
                <div>
                    <p><strong>***@item.Title***</strong></p>
                    <p>@item.Description</p>
                    <p>/@item.Category/</p>
                    <div class="row">
                        <div class=" col-md-2 ">
                            <a href="@item.Link">Details</a>
                        </div>
                        <div class=" col-md-2 ">
                            <a href="#">Favourite</a>
                        </div>
                    </div>

                </div>
            }
            <h4 style="text-align:center">**********************************************************</h4>
        }
    </div>
    <div class="col-xs-6">
        <h2>Favourite News</h2>
        
    </div>
</div>

